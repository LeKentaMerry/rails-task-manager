<h1>My tasks</h1>
<ul style="list-style: none">
  <% @tasks.each do |task| %>
    <li>
    <% if task.completed == true %>
      <input type="checkbox" checked><%= link_to task.title, task_path(task.id) %>
    <% else %>
      <input type="checkbox"><%= link_to task.title, task_path(task.id) %>
    <% end %>
    </li>
  <% end %>
</ul>

<%= link_to "+ Add a task", new_path %>
